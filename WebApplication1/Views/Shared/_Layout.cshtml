<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style='height:100px;'>
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>



                @if (Session["id"] != null)
                {
                    @Html.Raw("<div class='divcss5' style='position:relative; left:400px ; font-size:20px ;color:antiquewhite'>");
                    @Html.Raw("<form method='get' action='" + Url.Content("~/Login/LogOff") + "'>");

                    @Html.Raw(" 欢迎您  " + Session["name"] + "");
                    @Html.Raw(" <a href=\"/My/Index\">信息管理</a>");
                    @Html.Raw("  <img src='" + Session["img"] + "' style='height:100px;width:100px;'>");
                    @Html.Raw("<input type='submit' style='position:relative; left:100px ; font-size:15px; ' value='退出登陆' />");
                    @Html.Raw("</form>");
                    @Html.Raw("<form method='get' action='" + Url.Content("~/Home/Lookup") + "'>");
                    @Html.Raw("<input type='text' name='tname'  placeholder='输入你要查找的帖子'/><input type='submit' value='查找' />");
                    @Html.Raw("</form></div>");
                }

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("主页", "Index", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
