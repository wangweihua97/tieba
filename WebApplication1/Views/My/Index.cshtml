
<div style="height:100px;">

</div>
<h2>我发的帖</h2>
<table class="table">
    <thead>
    <th>
        时间
    </th>
    <th>标题</th>
    <th>
        操作
    </th>

    </thead>
    @{
        List<WebApplication1.Models.Lytable> lylist = ViewData["title_data"] as List<WebApplication1.Models.Lytable>;
    }
    @foreach (var item in lylist)
    {
        <tr>
            <td>
                @item.time
            </td>
            <td>
                <a href='@Url.Content("~/Comment/Index?tid="+item.id)'>@item.head_txt</a>
            </td>
            <td>
                <a href='@Url.Content("~/My/Delect_title?id="+item.id)'>删除</a>
            </td>
        </tr>

    }
</table>
<h2>我的回复</h2>
<table class="table">
    <thead>
    <th>
        时间
    </th>
    <th>内容</th>
    <th>
        操作
    </th>

    </thead>
    @{
        List<WebApplication1.Models.Del_cm> dcm = ViewData["comment_data"] as List<WebApplication1.Models.Del_cm>;
    }
    @foreach (var item in dcm)
    {
        <tr>
            <td>
                @item.time
            </td>
            <td>
                <a href='@Url.Content("~/Comment/Index?tid="+item.tid)'>@item.txt</a>
            </td>
            <td>
                <a href='@Url.Content("~/My/Delect_comment?id="+item.id+"&sub2_id="+item.sub2_id+"&rep_n="+item.rep)'>删除</a>
            </td>
        </tr>

    }
</table>
